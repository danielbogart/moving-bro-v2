<h1>User Group Index</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>All User Groups</th>
		</tr>
	</thead>
	<tbody>
	<% @groups.order("created_at DESC").each do |p| %>
		<tr>
			<td>
				<%= p.group_name %>
			</td>
		</tr>
	<% end %>	
	</tbody>
</table>

<table class="table table-striped">
    <thead>
      <tr>
        <th>My User Groups</th>
		</tr>
	</thead>
	<tbody>
	<% @my_groups.order("created_at DESC").each do |p| %>
		<tr>
			<td>
				<%= p.group_name %>
			</td>
		</tr>
	<% end %>	
	</tbody>
</table>
<%= render "shared/new_user_group_form" %>