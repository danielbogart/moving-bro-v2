<h1>User Group Index</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>All User Groups</th>
		</tr>
	</thead>
	<tbody>
	<% @groups.order("created_at DESC").each do |p| %>
		<tr>
			<td>
				<%= p.group_name %>
			</td>
		</tr>
	<% end %>	
	</tbody>
</table>

<table class="table table-striped">
    <thead>
      <tr>
        <th>My User Group</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>
				<% if @my_group.nil? %>

				<% else %>
					<%= link_to @my_group.group_name, "/user_groups/"+@my_group.group_name %>
				<% end %>
			</td>
		</tr>
	</tbody>
</table>

<% if @my_group = nil %>
	<% else %>
	<%= render "shared/new_user_group_form" %>
<% end %>