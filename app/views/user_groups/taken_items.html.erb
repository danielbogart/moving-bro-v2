<div class="col-lg-9">
	<div class="row row-centered">
		<div class="col-lg-9 col-centered boxShadow center-block no-padding-list">
		<%= form_tag() do %>
		<a class="list-group-item active cat taken-list">Marked Off Items</a>
			<%= form_tag("/user_groups/"+current_user.user_group.group_name, method: "post") do %>
			<% @user_group.taken_user_group_items.each do |p| %>		
				<a class="list-group-item">	
						<%= p.item.item_name %>	
						<%= check_box_tag("user_group_item_ids[]", p.id, false, :class => "text-center taken pull-right") %>
				</a>
			<% end %>	

			<div class="btn-group btn-group-md pull-right">
				<div class="btn btn-default" id="check_all_taken">
				Check / Uncheck All
				</div>
			</div>
		</div>
	</div>
	<br>
	<div class="row row-centered">
		<div class="col-lg-9 col-centered no-padding-list">
			<%= submit_tag("Put Back On List", :class => "btn btn-sm btn-primary") %>
			<% end %>
			<% end %>
		</div>
	</div>
</div>

<script type='text/javascript'>
    $('#check_all_taken').on("click", function(){ $('input.taken:checkbox').click(); });
</script>