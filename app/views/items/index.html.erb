<h1>Item Master List</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Item Index</th>
        <th>Category</th>
        <th>Amazon ASIN</th>
		</tr>
	</thead>
	<tbody>
	<% @items.order("created_at DESC").each do |p| %>
		<tr>
			<td>
				<%= p.item_name %>
			</td>
			<td>
				<%= p.category_name %>
			</td>
			<td>
				<%= p.amazon_affiliate_link %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= render "shared/new_item_form" %>