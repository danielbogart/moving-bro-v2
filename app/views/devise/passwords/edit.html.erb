<div class="container">
  <div class="row row-centered">
    <div class="col-lg-6 col-centered boxShadow sign-up center-block">
      <h1 class="text-center">Change your password</h1>
      <br><br>
      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, :as => :hidden %>
      <%= f.full_error :reset_password_token %>
      <div class="form-inputs">
        <div class="form-group">
          <label for="exampleInputEmail1">New password</label>
          <%= f.input :password, :required => true, :autofocus => true, :maxlength => 40, :input_html => { :class => "form-control" }, :label => false, :placeholder => "Enter email" %>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Confirm password</label>
          <%= f.input :password_confirmation, :required => true, :autofocus => true, :maxlength => 40, :input_html => { :class => "form-control" }, :label => false, :placeholder => "Enter email" %>
        </div>

      <div class="form-actions">
          <%= f.button :submit, "Change my password", :class => "btn btn-md btn-warning" %>
      </div>
      <% end %>
    </div>
  </div>
</div>