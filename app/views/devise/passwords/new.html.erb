<div class="container">
	<div class="row row-centered">
		<div class="col-lg-6 col-centered boxShadow sign-up center-block">
			<h1 class="text-center">Forgot your password?</h1>
			<br><br>
			<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			  <%= f.error_notification %>
			
			<div class="form-inputs">
			    <div class="form-group">
			    	<label for="exampleInputEmail1">Email address</label>
				    <%= f.input :email, :required => true, :autofocus => true, :maxlength => 40, :input_html => { :class => "form-control" }, :label => false, :placeholder => "Enter email" %>
				</div>

			<div class="form-actions">
			    <%= f.button :submit, "Send me password reset instructions", :class => "btn btn-md btn-warning" %>
			</div>
			<% end %>
		</div>
	</div>
</div>